<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pundo.corncob">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/corn"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/corn"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".auth.changepass"></activity>
        <activity android:name=".errors.verification" />
        <activity android:name=".payment.payment" />
        <activity android:name=".activity.dates" />
        <activity android:name=".errors.error404" />
        <activity android:name=".activity.centers" />
        <activity android:name=".activity.about" />
        <activity android:name=".form.pickup" />
        <activity android:name=".form.fertilizer" />
        <activity android:name=".auth.forgetpass" />
        <activity android:name=".form.farmDetails" />
        <activity android:name=".activity.profile" />
        <activity
            android:name=".auth.signup"
            android:theme="@style/actionTheme" />
        <activity
            android:name=".auth.login"
            android:theme="@style/actionTheme" />
        <activity android:name=".home" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/actionTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>