<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">



            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:contentInsetStartWithNavigation="0sp"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:scrollbars="none"
        android:scrollingCache="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20sp"
                android:text="@string/farmer"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

            <View
                android:layout_width="0sp"
                android:layout_height="8sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/grey_40"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

            <View
                android:layout_width="0sp"
                android:layout_height="20sp"/>

            <TextView
                android:id="@+id/famerText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="@string/farmerText"
                android:textSize="18sp"
                android:paddingTop="0sp"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15sp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/IdNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/id"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/id"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_grey_300"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12sp"/>


                <Spinner
                    android:id="@+id/county"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:spinnerMode="dropdown"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/number"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/phone"
                    android:layout_gravity="center_horizontal"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/click"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_grey_300"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12sp"/>




            </LinearLayout>

            <View
                android:layout_width="0sp"
                android:layout_height="20sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20sp"
                android:text="@string/farm"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

            <View
                android:layout_width="0sp"
                android:layout_height="8sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/grey_40"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

            <View
                android:layout_width="0sp"
                android:layout_height="5sp"/>

            <TextView
                android:id="@+id/famText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="@string/farmText"
                android:textSize="18sp"
                android:paddingTop="0sp"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"/>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15sp"
    android:orientation="vertical">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/plot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/plot_number"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/number"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_grey_300"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/acres"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/acres"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_grey_300"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12sp"/>


            <Spinner
                android:id="@+id/crop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/sac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bags"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/sack"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_grey_300"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>




    <View
                    android:layout_width="match_parent"
                    android:layout_height="12sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/fert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fertilizer"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/sack"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_grey_300"
                        android:inputType="number"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="12sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/price"
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/dollar"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/blue_grey_300"
                        android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>



</LinearLayout>


            <View
                android:layout_width="0sp"
                android:layout_height="20sp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="20sp"
                android:text="@string/legal"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

            <View
                android:layout_width="0sp"
                android:layout_height="8sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/grey_40"
                android:layout_marginLeft="15sp"
                android:layout_marginRight="15sp"/>

            <View
                android:layout_width="0sp"
                android:layout_height="20sp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/legal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="@string/legal_text"
                    android:textSize="18sp"
                    android:paddingTop="0sp"
                    android:paddingStart="15sp"
                    android:paddingEnd="15sp"/>


                    <Button
                        android:id="@+id/upload"
                        android:layout_width="300sp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="-4dp"
                        android:layout_marginTop="15sp"
                        android:layout_marginRight="-4dp"
                        android:background="@drawable/button_rounded_green_300"
                        android:text="@string/upload"
                        android:textAllCaps="false"
                        android:layout_below="@+id/legal"
                        android:textColor="@color/grey_3"
                        />




                <ImageView
                    android:id="@+id/uploadDoc"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_below="@+id/upload"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"/>

                <ImageView
                    android:id="@+id/uploadDoc2"
                    android:layout_width="200sp"
                    android:layout_height="200sp"
                    android:layout_below="@+id/upload"
                    android:layout_toEndOf="@id/uploadDoc"
                    android:gravity="center_horizontal"
                    android:textSize="20sp"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="20sp"
                        android:layout_below="@id/uploadDoc"/>


                <Button
                    android:id="@+id/submit"
                    android:layout_width="300sp"
                    android:layout_height="55dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginRight="-4dp"
                    android:background="@drawable/button_rounded_green_300"
                    android:text="@string/submit"
                    android:textAllCaps="false"
                    android:layout_below="@+id/view"
                    android:textColor="@color/grey_3"/>

                <View
                        android:layout_width="0sp"
                        android:layout_height="20sp"/>


            </RelativeLayout>



        </LinearLayout>



    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>